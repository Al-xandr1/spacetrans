<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://atmosphericGasBrowse.caption"
        focusComponent="table">
    <data>
        <collection id="atmosphericGasesDc"
                    class="com.company.spacetrans.entity.AtmosphericGas">
            <fetchPlan extends="_local">
                <property name="gas" fetchPlan="_instance_name"/>
                <property name="atmosphere" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="atmosphericGasesDl">
                <query>
                    <![CDATA[select e from st_AtmosphericGas e]]>
                </query>
            </loader>
        </collection>
        <instance id="atmosphericGasDc"
                  class="com.company.spacetrans.entity.AtmosphericGas">
            <fetchPlan extends="_local">
                <property name="gas" fetchPlan="_instance_name"/>
                <property name="atmosphere" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="save" icon="OK" caption="msg:///actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="CANCEL" caption="msg:///actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" dataLoader="atmosphericGasesDl">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%"
                            dataContainer="atmosphericGasesDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="refresh" type="refresh"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="gas"/>
                        <column id="volume"/>
                        <column id="atmosphere"/>
                    </columns>
                    <simplePagination/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="refreshBtn" action="table.refresh"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="fieldGroupBox" spacing="true">
                <scrollBox id="fieldGroupBox">
                    <form id="form" dataContainer="atmosphericGasDc">
                        <column width="350px">
                            <entityPicker id="gasField" property="gas">
                                <actions>
                                    <action id="lookup" type="entity_lookup"/>
                                    <action id="clear" type="entity_clear"/>
                                </actions>
                            </entityPicker>
                            <textField id="volumeField" property="volume"/>
                            <entityPicker id="atmosphereField" property="atmosphere">
                                <actions>
                                    <action id="lookup" type="entity_lookup"/>
                                    <action id="clear" type="entity_clear"/>
                                </actions>
                            </entityPicker>
                        </column>
                    </form>
                </scrollBox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
