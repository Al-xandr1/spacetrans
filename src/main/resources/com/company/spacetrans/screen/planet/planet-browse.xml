<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://planetBrowse.caption"
        focusComponent="planetsTable">
    <data readOnly="true">
        <collection id="planetsDc"
                    class="com.company.spacetrans.entity.Planet">
            <fetchPlan extends="_local">
                <property name="atmosphere" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="planetsDl">
                <query>
                    <![CDATA[select e from st_Planet e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="planetsTable" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter"
                        dataLoader="planetsDl">
                    <properties include=".*"/>
                </filter>
                <groupTable id="planetsTable"
                            width="100%"
                            dataContainer="planetsDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="refresh" type="refresh"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="mass"/>
                        <column id="picture"/>
                        <column id="semiMajorAxis"/>
                        <column id="orbitalPeriod"/>
                        <column id="rotationPeriod"/>
                        <column id="atmosphere"/>
                        <column id="rings"/>
                    </columns>
                    <simplePagination/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="planetsTable.create"/>
                        <button id="editBtn" action="planetsTable.edit"/>
                        <button id="refreshBtn" action="planetsTable.refresh"/>
                        <button id="removeBtn" action="planetsTable.remove"/>
                        <fileUpload id="importPlanets" uploadButtonCaption="msg://com.company.spacetrans.screen.planet/importPlanet.caption"
                                    uploadButtonDescription="msg://com.company.spacetrans.screen.planet/importPlanet.description"
                        />
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <!--todo LOW add picture scaling -->
            <vbox id="pictureBox" height="100%" spacing="true" expand="planetPicture" margin="true" width="AUTO">
                <image id="planetPicture" dataContainer="planetsDc" property="picture" scaleMode="SCALE_DOWN"/>
            </vbox>
        </split>
    </layout>
</window>
