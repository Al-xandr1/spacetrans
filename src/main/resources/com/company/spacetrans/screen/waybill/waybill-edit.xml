<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://waybillEdit.caption"
        focusComponent="form">
    <data>
        <instance id="waybillDc"
                  class="com.company.spacetrans.entity.Waybill">
            <fetchPlan extends="_base">
                <property name="creator" fetchPlan="_instance_name"/>
                <property name="shipper" fetchPlan="_base"/>
                <property name="consignee" fetchPlan="_base"/>
                <property name="departurePort" fetchPlan="_base">
                    <property name="coordinates" fetchPlan="_base"/>
                    <property name="moon" fetchPlan="_instance_name"/>
                    <property name="planet" fetchPlan="_instance_name"/>
                </property>
                <property name="destinationPort" fetchPlan="_base">
                    <property name="coordinates" fetchPlan="_base"/>
                    <property name="moon" fetchPlan="_instance_name"/>
                    <property name="planet" fetchPlan="_instance_name"/>
                </property>
                <property name="carrier" fetchPlan="_base"/>
                <property name="items" fetchPlan="_instance_name">
                    <property name="dim" fetchPlan="_base"/>
                    <property name="number"/>
                    <property name="weight"/>
                    <property name="charge"/>
                    <property name="waybill" fetchPlan="_base">
                        <property name="items" fetchPlan="_base"/>
                    </property>
                </property>
            </fetchPlan>
            <loader/>
            <collection id="itemsDc" property="items"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="waybillDc">
                <column width="350px">
                    <textField id="referenceField" property="reference"/>
                    <entityPicker id="creatorField" property="creator">
                        <actions>
                            <action id="lookup" type="entity_lookup"/>
                            <action id="clear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <!--todo LOW wrap into something for better style -->
                    <radioButtonGroup id="shipperTypeChooser" orientation="horizontal"
                                      optionsEnum="com.company.spacetrans.screen.waybill.CustomerType"
                                      caption="msg://com.company.spacetrans.screen.waybill/ShipperType" align="MIDDLE_CENTER"
                                      description="msg://com.company.spacetrans.screen.waybill/ShipperEntityComboboxSelectType"/>
                    <entityComboBox id="shipperField" property="shipper" editable="false"
                                    description="msg://com.company.spacetrans.screen.waybill/ShipperEntityComboboxSelectType">
                        <actions>
                            <action id="clear" type="entity_clear"/>
                        </actions>
                    </entityComboBox>
                    <!--todo LOW wrap into something for better style -->
                    <radioButtonGroup id="consigneeTypeChooser" orientation="horizontal"
                                      optionsEnum="com.company.spacetrans.screen.waybill.CustomerType"
                                      caption="msg://com.company.spacetrans.screen.waybill/ConsigneeType"
                                      description="msg://com.company.spacetrans.screen.waybill/ConsigneeEntityPickerSelectType"/>
                    <entityPicker id="consigneeField" property="consignee" editable="false"
                                  description="msg://com.company.spacetrans.screen.waybill/ConsigneeEntityPickerSelectType">
                        <actions>
                            <action id="lookup" type="entity_lookup"/>
                            <action id="clear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <entityComboBox id="departureField" metaClass="st_AstronomicalBody"
                                    caption="msg://com.company.spacetrans.screen.waybill/Departure">
                        <actions>
                            <action id="clear" type="entity_clear"/>
                        </actions>
                    </entityComboBox>
                    <entityPicker id="departurePortField" property="departurePort">
                        <actions>
                            <action id="lookup" type="entity_lookup"/>
                            <action id="clear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <entityComboBox id="destinationField" metaClass="st_AstronomicalBody"
                                    caption="msg://com.company.spacetrans.screen.waybill/Destination">
                        <actions>
                            <action id="clear" type="entity_clear"/>
                        </actions>
                    </entityComboBox>
                    <entityPicker id="destinationPortField" property="destinationPort">
                        <actions>
                            <action id="lookup" type="entity_lookup"/>
                            <action id="clear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <entityComboBox id="carrierField" property="carrier" editable="false"
                                    description="msg://com.company.spacetrans.screen.waybill/CarriersSelectAllPortsAtFirst">
                        <actions>
                            <action id="clear" type="entity_clear"/>
                        </actions>
                    </entityComboBox>
                    <textField id="totalWeightField" property="totalWeight" editable="false"/>
                    <textField id="totalChargeField" property="totalCharge" editable="false"/>
                </column>
            </form>
            <groupBox id="itemsBox" caption="msg://com.company.spacetrans.entity/Waybill.items">
                <table id="itemsTable" dataContainer="itemsDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="number"/>
                        <column id="name"/>
                        <column id="weight"/>
                        <column id="charge"/>
                        <column id="dim"/>
                    </columns>
                    <buttonsPanel>
                        <button action="itemsTable.create"/>
                        <button action="itemsTable.edit"/>
                        <button id="removeButton" action="itemsTable.remove"/>
                        <button id="upButton" primary="false" enable="false"
                                caption="msg://com.company.spacetrans.screen.waybillitem/waybillItemEdit.upButton"/>
                        <button id="downButton" primary="false" enable="false"
                                caption="msg://com.company.spacetrans.screen.waybillitem/waybillItemEdit.downButton"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
