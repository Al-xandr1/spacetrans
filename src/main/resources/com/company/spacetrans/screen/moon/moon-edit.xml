<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://moonEdit.caption"
        focusComponent="form">
    <data>
        <instance id="moonDc"
                  class="com.company.spacetrans.entity.Moon">
            <fetchPlan extends="_local">
                <property name="atmosphere" fetchPlan="_instance_name"/>
                <property name="planet" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader/>
            <instance id="atmosphereDc" property="atmosphere"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="moonDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="massField" property="mass"/>
                <fileStorageUpload id="pictureField" property="picture"/>
                <entityPicker id="atmosphereField" property="atmosphere">
                    <actions>
                        <!-- todo [BUG] генерируется поле entity_open_composition а надо то,что написано тут io.jmix.ui.action.entitypicker.EntityOpenCompositionAction.ID -->
                        <action id="open_composition" type="entity_openComposition"/>
                        <action id="clear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <entityPicker id="planetField" property="planet">
                    <actions>
                        <action id="lookup" type="entity_lookup"/>
                        <action id="clear" type="entity_clear"/>
                    </actions>
                </entityPicker>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
